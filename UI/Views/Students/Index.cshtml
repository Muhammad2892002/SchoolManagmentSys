        #icons {
          font-size:20px;
            
            
        }
        #icons:hover{
        
        color:orangered;
        font-size:30px;
        
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-bxK7u...etc" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!--CSS src-->
    <link href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/3.2.5/css/buttons.dataTables.css" rel="stylesheet" />
    <!-- Script src-->
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.3.4/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.5/js/buttons.html5.min.js"></script>

</head>
<body>
    <a asp-action="Add" id="icons"><i id="icons" class="fa-solid fa-user-plus"></i>Add New Student</a>
    <table id="example" class="display">
        <thead>
            <tr>
                <th>Name</th>
                <th>Birth Date</th>
                <th>Birth Place</th>
                <th>Gender</th>
                <th>National Id</th>
                <th>Create Date</th>
                <th>Update Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                 <tr>
                <td>@student.FirstName   @student.LastName</td>
                <td>@student.BirthDate</td>
                <td>@student.GovernorateName</td>
                <td>@student.GenderName</td>
                <td>@student.NationalId</td>
                <td>@student.CreateDate</td>
                <td>@student.UpdateDate</td>
                <td>
                        <a href=""><i id="icons" class="fa-solid fa-pen-to-square"></i></a>
                        <a href=""><i id="icons" class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
            
            
            }
           
           
           
           
        </tfoot>
    </table>
    <script>
            new DataTable('#example', {
            layout: {
                topStart: {
                    buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                }
            }
        });
    </script>
</body>

</html>