@model Infrastructure.DTOs.SubjectDTO;

@{
    ViewData["Title"] = "Edit Subject";
}
@if (ViewBag.Msg != null)
{

    <div class="alert alert-danger" role="alert">
        @ViewBag.Msg
    </div>
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="mb-4">Edit Subject</h2>

    <form asp-action="Edit" method="post">
        <div class="mb-3">
            <label asp-for=Name class="form-label">Subject Name</label>
            <input asp-for=Name class="form-control" placeholder="Enter subject name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
          
            <input asp-for=Id hidden class="form-control" placeholder="Enter subject name" required />
           
        </div>

        <button type="submit" class="btn btn-outline-info">Save</button>
        <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
